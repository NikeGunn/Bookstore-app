# Django settings
DEBUG=0
SECRET_KEY=change_this_to_a_secure_random_key
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
API_SERVER_URL=https://your-domain.com

# Database settings
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=secure_password_here
DATABASE_URL=postgresql://postgres:secure_password_here@db:5432/postgres

# CORS settings
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,http://localhost:3000

# Admin user - optional for automatic creation
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=secure_admin_password

# Sample data - set to 1 to create sample data on startup
CREATE_SAMPLE_DATA=0

# AWS settings - if using AWS services
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_s3_bucket_name
